@page "/"
@using BlogApp1.Client.Components.Auth
@inject IDialogService DialogService

@inject HttpClient Http
<PageTitle>Home</PageTitle>




<MudPaper Class="hero-modern d-flex align-start justify-center">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudGrid Class="hero-inner mt-5" AlignItems="AlignItems.Center" Spacing="3">
            <!-- LEFT -->
            <MudItem xs="12" md="7">
                <MudText Typo="Typo.h2" Class="hero-title">
                    Middle<span class="accent">Man</span>
                </MudText>

                <MudText Typo="Typo.subtitle1" Class="hero-description">
                    The smartest way to explore blogs using AI.
                    <br />
                    Ask questions. Get instant answers. No scrolling.
                </MudText>

                <ul class="hero-points">
                    <li>⚡ Powered by AI &amp; RAG</li>
                    <li>📚 Understand blogs instantly</li>
                    <li>🔍 Search smarter, not harder</li>
                </ul>

                <div class="hero-actions">
                    <MudButton
                               Variant="Variant.Filled"
                               Class="btn-primary"
                               @onclick="OpenLogin" >
                        Start Exploring
                    </MudButton>

                    <MudButton Color="Color.Default"
                               Variant="Variant.Outlined"
                               Class="btn-secondary"
                               Href="/blogs">
                        Browse Blogs
                    </MudButton>
                </div>
            </MudItem>

            <!-- RIGHT -->
            <MudItem xs="12" md="5" Class="hero-right">
                <MudPaper Class="mock-card" Elevation="8">
                    <MudText Typo="Typo.subtitle1" Class="mock-title">
                        Ask MiddleMan
                    </MudText>
                    <MudText Typo="Typo.body2" Class="mock-question">
                        "What is the blog about AI agents?"
                    </MudText>
                    <MudPaper Class="mock-answer mb-2" Elevation="0">
                        🤖 This blog explains how AI agents use memory, tools, and reasoning to solve tasks efficiently...
                    </MudPaper>
                    <MudPaper Class="mock-answer" Elevation="0">
                        🤖 This post breaks down how AI agents use reasoning and tools to tackle complex tasks.
                    </MudPaper>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudPaper>

<!-- STATS -->
<MudContainer Class="stats" Style="border-top:1px solid #1E1B4B">
    <MudGrid Spacing="3" Justify="Justify.Center">
        <MudItem xs="12" sm="4">
            <MudPaper Class="stat-card">
                <MudText Typo="Typo.h5">⚡ Fast</MudText>
                <MudText Typo="Typo.body2">Instant AI responses</MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="4">
            <MudPaper Class="stat-card">
                <MudText Typo="Typo.h5">📚 Smart</MudText>
                <MudText Typo="Typo.body2">Blog-aware answers</MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="4">
            <MudPaper Class="stat-card">
                <MudText Typo="Typo.h5">🔒 Secure</MudText>
                <MudText Typo="Typo.body2">Your data stays yours</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<!-- HOW IT WORKS -->
<MudPaper Class="how-it-works" Style="border-top:1px solid #1E1B4B">
    <MudContainer>
        <MudText Typo="Typo.h4" Align="Align.Center">How MiddleMan Works</MudText>

        <MudGrid Class="steps" Spacing="3" Justify="Justify.Center">
            <MudItem xs="12" sm="4">
                <MudPaper Class="step" Elevation="0">
                    <span>1</span>
                    <MudText Typo="Typo.h6">Upload Blogs</MudText>
                    <MudText Typo="Typo.body2">
                        Your blogs are indexed and converted into embeddings.
                    </MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" sm="4">
                <MudPaper Class="step" Elevation="0">
                    <span>2</span>
                    <MudText Typo="Typo.h6">Ask Anything</MudText>
                    <MudText Typo="Typo.body2">
                        Users ask questions in natural language.
                    </MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" sm="4">
                <MudPaper Class="step" Elevation="0">
                    <span>3</span>
                    <MudText Typo="Typo.h6">AI Answers</MudText>
                    <MudText Typo="Typo.body2">
                        AI fetches relevant data and responds accurately.
                    </MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudPaper>

<!-- FEATURES -->
<MudPaper Class="features" Style="border-top:1px solid #1E1B4B">
    <MudContainer>
        <MudText Typo="Typo.h4" Align="Align.Center">Why Choose MiddleMan?</MudText>

        <MudGrid Class="feature-grid" Spacing="3" Justify="Justify.Center">
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="feature-box">
                    <MudText Typo="Typo.h6">🧠 RAG Powered</MudText>
                    <MudText Typo="Typo.body2">
                        Uses Retrieval-Augmented Generation for accurate answers.
                    </MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="feature-box">
                    <MudText Typo="Typo.h6">⚡ Ultra Fast</MudText>
                    <MudText Typo="Typo.body2">
                        Groq-powered inference ensures blazing speed.
                    </MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="feature-box">
                    <MudText Typo="Typo.h6">📈 Scalable</MudText>
                    <MudText Typo="Typo.body2">
                        Handles thousands of queries with ease.
                    </MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="feature-box">
                    <MudText Typo="Typo.h6">🎨 Modern UI</MudText>
                    <MudText Typo="Typo.body2">
                        Clean, responsive, and user-friendly design.
                    </MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudPaper>

<!-- CTA -->
<MudPaper Class="cta" Style="border-top:1px solid #1E1B4B">
    <MudContainer Class="text-center">
        <MudText Typo="Typo.h4">Ready to Experience Smart Search?</MudText>
        <MudText Typo="Typo.subtitle2">
            Start exploring blogs with AI-powered intelligence.
        </MudText>

        <MudButton 
                   Variant="Variant.Filled"
                   Class="btn-primary large"
                   @onclick="OpenLogin">
            Get Started
        </MudButton>
    </MudContainer>
</MudPaper>

<!-- FOOTER -->
<MudPaper Class="footer-root">
    <MudText Typo="Typo.caption" Align="Align.Center">
        © 2025 MiddleMan • Built with ❤️ &amp; AI
    </MudText>
</MudPaper>

@code {
    bool topdrawer = true;
    private void OpenLogin()
    {
        var parameters = new DialogParameters();
        var options = new DialogOptions()
        {
            MaxWidth = MaxWidth.Small,
            BackdropClick = true,
            CloseButton = true,
            BackgroundClass = "dialog-backdrop-blur"
        };

        DialogService.Show<LoginDialog>("", parameters, options);
    }
}
